@model Produto


<div class="container">
    <div class="row">       
            <div class="card-block">
                <h2 class="card-title">@Model.Nome</h2>
            <div class="col-sm-4 col-md-4 col-lg-4">
                <div class="text-center">
                    <img src="@("~/Imagens/Produtos/" + Model.ImagemUrl)" asp-append-version="true" height="250px" width="250px" />
                </div>
                <p class="card-text"><h5>@Model.DescricaoLonga</h5></p>
                <p class="btn btn-group align-content-lg-end">
                    <a asp-controller="Produto" asp-action="List" class="btn btn-outline-info">Ver todos os produtos</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarNoCarrinho" asp-route-Produtoid="@Model.ProdutoId">Adicionar @Model.Nome ao carrinho</a>
                </p>
            </div>

        </div>
    </div>
</div>