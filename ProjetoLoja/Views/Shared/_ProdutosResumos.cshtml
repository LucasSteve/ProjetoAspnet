@model Produto


<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src=@Model.ImagemUrl/ class="img-fluid img-thumbnail"></p>    
   <h4><a asp-controller="Produto" asp-action="Detalhes" asp-route-ProdutoId="@Model.ProdutoId">@Model.Nome</a></h4>
    <h3>Preço: @Model.Preco.ToString("C")</h3>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p class="button">
            <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" asp-action="AdicionarNoCarrinho" asp-route-ProdutoId="@Model.ProdutoId">Adicionar ao carrinho</a>
        </p>
    </div>
</div>