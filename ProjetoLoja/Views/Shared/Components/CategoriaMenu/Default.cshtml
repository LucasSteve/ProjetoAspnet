

<div class="btn-group">
    
  <a type="button" class="btn btn-secondary"asp-controller="Produto" asp-action="List">Produtos</a>
  <button type="button" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" data-bs-toggle="dropdown" aria-expanded="false">
    <span class="visually-hidden">Toggle Dropdown</span>
  </button>
  
  <ul class="dropdown-menu drop dropdown-menu-dark">
    @foreach (var Categoria in Model)
    {
        <li>
            <a class="dropdown-item" asp-controller="Produto" asp-action="List" style="color:white" asp-route-categoria="@Categoria.CategoriaNome">@Categoria.CategoriaNome</a>
        </li>       
    }
    <li><hr class="dropdown-divider"></li>
     <li>
            <a class="dropdown-item" asp-controller="Produto" asp-action="List" style="color:white" asp-route-categoria="">Todos os Produtos</a>
        </li>       

  </ul>
</div>